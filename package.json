{
  "name": "catalog-gql",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "generate": "gql-gen",
    "build": "tsc && npm run generate",
    "start": "node ./build/index.js",
    "test:integration": "npm run migrate:local && jest --config=jest.integration.config.json --passWithNoTests --forceExit --ci",
    "test:unit": "jest --config=jest.unit.config.json --passWithNoTests --forceExit --ci",
    "migrate:local": "knex migrate:latest --knexfile ./knexfile_local.js --env development && npx knex seed:run --env development --knexfile ./knexfile_local.js ",
    "migrate": "knex migrate:latest --env development && npx knex seed:run --env development"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@graphql-codegen/cli": "^1.5.0",
    "@graphql-codegen/typescript-resolvers": "^1.5.0",
    "@types/express": "^4.17.0",
    "@types/node": "^12.0.7",
    "ts-node": "^8.6.2",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "@apollo/federation": "^0.6.2",
    "@types/cookie": "^0.3.3",
    "@types/graphql": "^14.2.0",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.149",
    "apollo-server": "^2.11.0",
    "apollo-server-express": "^2.6.3",
    "body-parser": "^1.19.0",
    "cookie": "^0.4.0",
    "cors": "^2.8.5",
    "dataloader": "^1.4.0",
    "date-fns": "^1.30.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^14.3.1",
    "graphql-import": "^0.7.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "knex": "^0.20.11",
    "lodash": "^4.17.19",
    "pg-promise": "^8.7.5",
    "ts-jest": "^25.2.1"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run build"
    }
  }
}
